# This is an example file. Create actual secrets using:
# kubectl create secret generic package-analysis-secrets \
#   --from-literal=database-url='postgresql://user:pass@postgres:5432/dbname' \
#   --from-literal=redis-url='redis://redis:6379/0' \
#   --from-literal=secret-key='your-django-secret-key-here' \
#   --from-literal=registry-username='your-registry-username' \
#   --from-literal=registry-password='your-registry-password' \
#   --namespace=package-analysis

apiVersion: v1
kind: Secret
metadata:
  name: package-analysis-secrets
  namespace: package-analysis
type: Opaque
stringData:
  # Database
  database-url: "postgresql://user:password@postgres-service:5432/packamal"
  
  # Redis
  redis-url: "redis://redis-service:6379/0"
  
  # Django
  secret-key: "CHANGE_THIS_TO_A_SECURE_RANDOM_STRING"
  
  # Container Registry (if using private registry)
  registry-username: "your-registry-username"
  registry-password: "your-registry-password"

