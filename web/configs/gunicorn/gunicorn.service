[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=pakaremon
Group=www-data
WorkingDirectory=/home/pakaremon/packamal/web/package-analysis-web
ExecStart=/home/pakaremon/packamal/packamalenv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          packamal.wsgi:application

[Install]
WantedBy=multi-user.target